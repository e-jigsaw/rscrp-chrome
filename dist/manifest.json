{
  "manifest_version": 2,
  "name": "rscrp",
  "description": "Rescrap",
  "version": "0.0.2",
  "author": "Takaya Kobayashi (https://kbys.tk/y)",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
		"default_icon": "icon.png"
	},
  "content_scripts": [{
    "matches": ["https://scrapbox.io/*"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": ["inject.js", "style.css"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
	}
}
